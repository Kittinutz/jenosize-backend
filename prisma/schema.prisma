generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaignsProducts   CampaignsProducts[]
  marketPlaceProducts MarketPlaceProduct[]
 }

model MarketPlaceProduct {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  url         String
  platform    PlatformEnum
  productId  String?
  product Product? @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  links Link[]
}


enum PlatformEnum {
  LAZADA
  SHOPEE
}

model Campaign {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  startDate   DateTime
  endDate     DateTime
  UTMSource   String
  UTMMedium   String
  UTMCampaign String
  campaignsProducts   CampaignsProducts[]
  links Link[]
}

model CampaignsProducts {
  id          String   @id @default(uuid())
  campaignId  String
  productId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaign Campaign @relation(fields: [campaignId], references: [id])
  product Product @relation(fields: [productId], references: [id])

}
model Link {
  id          String   @id @default(uuid())
  urlId    String    @unique
  url         String    @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaignId String
  marketPlaceProductId String
  campaign Campaign @relation(fields: [campaignId], references: [id])
  marketPlaceProduct MarketPlaceProduct? @relation(fields: [marketPlaceProductId], references: [id])
}
