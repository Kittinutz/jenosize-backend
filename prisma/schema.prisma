generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  CampaignsProducts   CampaignsProducts[]
  MarketPlaceProduct MarketPlaceProduct[]
 }

model MarketPlaceProduct {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  url         String
  platform    PlatformEnum
  productId  String?   @unique
  Product Product? @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum PlatformEnum {
  LAZADA
  SHOPEE
}

model Campaign {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  startDate   DateTime
  endDate     DateTime
  UTMSource   String
  UTMMedium   String
  UTMCampaign String
  CampaignsProducts   CampaignsProducts[]
}

model CampaignsProducts {
  id          String   @id @default(uuid())
  campaignId  String
  productId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Campaign Campaign @relation(fields: [campaignId], references: [id])
  Product Product @relation(fields: [productId], references: [id])
  CampaignProductsLinks CampaignProductsLinks?
}
model Link {
  id          String   @id @default(uuid())
  url         String    @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  CampaignProductsLinks CampaignProductsLinks?
}

model CampaignProductsLinks {
  id          String   @id @default(uuid())
  campaignProductsId String @unique
  linkId      String @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  CampaignsProducts CampaignsProducts @relation(fields: [campaignProductsId], references: [id])
  Link Link @relation(fields: [linkId], references: [id])
}


