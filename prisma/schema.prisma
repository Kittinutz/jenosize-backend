generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaignsProducts   CampaignsProducts[]
  marketPlaceProducts MarketPlaceProduct[]
 }

model MarketPlaceProduct {
  id          String   @id @default(uuid())
  title        String
  image_url   String
  price       Float
  url         String
  platform    PlatformEnum
  productId  String?
  product Product? @relation(fields: [productId], references: [id],onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  links Link[]
  clickEvents ClickEvent[]
}


enum PlatformEnum {
  LAZADA
  SHOPEE
}

model Campaign {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  startDate   DateTime
  endDate     DateTime
  UTMSource   String
  UTMMedium   String
  UTMCampaign String
  campaignsProducts   CampaignsProducts[]
  links Link[]
  clickEvents ClickEvent[]
}

model CampaignsProducts {
  id          String   @id @default(uuid())
  campaignId  String
  productId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaign Campaign @relation(fields: [campaignId], references: [id],onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id],onDelete: Cascade)

}
model Link {
  id          String   @id @default(uuid())
  urlId    String    @unique
  url         String    @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaignId String
  marketPlaceProductId String
  campaign Campaign @relation(fields: [campaignId], references: [id],onDelete: Cascade)
  marketPlaceProduct MarketPlaceProduct? @relation(fields: [marketPlaceProductId], references: [id],onDelete: Cascade)
  clickEvents ClickEvent[]
}

model ClickEvent {
  id                   String       @id @default(uuid())
  linkId               String
  urlId                String       // denormalized for easy query
  campaignId           String
  marketPlaceProductId String?
  productId            String?      // denormalized from marketPlaceProduct
  platform             PlatformEnum? // denormalized from marketPlaceProduct
  clickedAt            DateTime     @default(now())

  link               Link?             @relation(fields: [linkId], references: [id])
  campaign           Campaign?           @relation(fields: [campaignId], references: [id])
  marketPlaceProduct MarketPlaceProduct? @relation(fields: [marketPlaceProductId], references: [id])

  @@index([campaignId, clickedAt])
  @@index([productId, clickedAt])
  @@index([platform, clickedAt])
  @@index([urlId, clickedAt])
  @@index([clickedAt]) // for time-range queries
}